<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lightGreenBackground">

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today: "
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/darkGreenText"
        android:layout_marginBottom="16dp"/>

    <!-- Data Box 1 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvData1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Container 1:"
            android:textSize="18sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvData1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Bluetooth"
            android:textSize="26sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/etData1Subtitle"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="Enter the pill name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Data Box 2 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvData2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Container 2:"
            android:textSize="18sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvData2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Bluetooth"
            android:textSize="26sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/etData2Subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter the pill name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:enabled="false"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEdit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Data Box 3 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvData3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Container 3:"
            android:textSize="18sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvData3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Bluetooth"
            android:textSize="26sp"
            android:textColor="@color/darkGreenText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/etData3Subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter the pill name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:enabled="false"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEdit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
